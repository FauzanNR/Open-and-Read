<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ProgressBar
        android:id="@+id/id_progress_book"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/id_recycler_book"
        app:layout_constraintEnd_toEndOf="@+id/id_recycler_book"
        app:layout_constraintStart_toStartOf="@+id/id_recycler_book"
        app:layout_constraintTop_toTopOf="@+id/id_recycler_book" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/id_text_info_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No Internet!"
        app:layout_constraintBottom_toBottomOf="@+id/id_recycler_book"
        app:layout_constraintEnd_toEndOf="@+id/id_recycler_book"
        app:layout_constraintStart_toStartOf="@+id/id_recycler_book"
        app:layout_constraintTop_toTopOf="@+id/id_recycler_book" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_recycler_book"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>